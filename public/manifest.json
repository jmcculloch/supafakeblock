{
  "manifest_version": 3,

  "name": "Supafakeblock",
  "description": "Distributed blacklist for reporting and identifying Facebook scammers, spammers, fake accounts, etc.",
  "version": "0.0.3",

  "options_ui": {
    "page": "options.html"
  },

  "action": {
    "default_icon": "icon-128.png",
    "default_popup": "popup.html"
  },

  "icons": {
    "16": "icon-16.png",
    "32": "icon-32.png",
    "48": "icon-48.png",
    "128": "icon-128.png"
  },

  "content_scripts": [
      {
          "matches": ["https://www.facebook.com/*"],
          "js": ["js/vendor.js", "js/content_script.js"]
      }
  ],

  "background": {
    "service_worker": "js/background.js"
  },

  "host_permissions": [
    "<all_urls>"
  ]
}
